{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver"],
            "django": true
        },
        {
            "name": "Edge: Django",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Django Full Debug",
            "configurations": ["Django", "Edge: Django"]
        }
    ]
}
